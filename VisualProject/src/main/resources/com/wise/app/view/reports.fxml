<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.wise.app.controller.ReportsController"
            prefWidth="1050" prefHeight="650">

    <left>
        <VBox styleClass="sidebar" spacing="10" prefWidth="240">
            <Label text="Reports" style="-fx-font-size:20; -fx-font-weight:800;"/>
            <Button text="Back" onAction="#back"/>
        </VBox>
    </left>

    <center>
        <VBox spacing="14" style="-fx-padding:18;">
            <VBox styleClass="card" spacing="10" maxWidth="520">
                <Label text="Summary" style="-fx-font-size:18; -fx-font-weight:800;"/>
                <Label fx:id="lblSales"/>
                <Label fx:id="lblCount"/>
            </VBox>
        </VBox>
    </center>

</BorderPane>
