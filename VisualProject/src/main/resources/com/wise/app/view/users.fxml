<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.wise.app.controller.UsersController"
            prefWidth="1050" prefHeight="650">

    <left>
        <VBox styleClass="sidebar" spacing="10" prefWidth="240">
            <Label text="Users" style="-fx-font-size:20; -fx-font-weight:800;"/>
            <Button text="Back" onAction="#back"/>
        </VBox>
    </left>

    <center>
        <VBox spacing="12" style="-fx-padding:18;">
            <VBox styleClass="card" spacing="10">
                <Label text="Users List" style="-fx-font-size:18; -fx-font-weight:800;"/>

                <TableView fx:id="table" prefHeight="480">
                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
                        <TableColumn fx:id="colUsername" text="Username" prefWidth="250"/>
                        <TableColumn fx:id="colRole" text="Role" prefWidth="150"/>
                    </columns>
                </TableView>

                <HBox spacing="10">
                    <Button text="Delete Selected" onAction="#deleteSelected" styleClass="button primary"/>
                </HBox>
            </VBox>
        </VBox>
    </center>

</BorderPane>
