<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.wise.app.controller.ItemsController"
            prefWidth="1050" prefHeight="650">

    <left>
        <VBox styleClass="sidebar" spacing="10" prefWidth="240">
            <Label text="Items" style="-fx-font-size:20; -fx-font-weight:800;"/>
            <Button text="Back" onAction="#back"/>
        </VBox>
    </left>

    <center>
        <VBox spacing="12" style="-fx-padding:18;">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="txtSearch" promptText="Search by name..." prefWidth="320"/>
            </HBox>

            <VBox styleClass="card" spacing="10">
                <Label text="Items Table" style="-fx-font-size:18; -fx-font-weight:800;"/>

                <TableView fx:id="table" prefHeight="360">
                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
                        <TableColumn fx:id="colName" text="Name" prefWidth="320"/>
                        <TableColumn fx:id="colQty" text="Quantity" prefWidth="120"/>
                        <TableColumn fx:id="colPrice" text="Price" prefWidth="120"/>
                    </columns>
                </TableView>

                <HBox spacing="10">
                    <TextField fx:id="txtName" promptText="Name" prefWidth="260"/>
                    <TextField fx:id="txtQty" promptText="Qty" prefWidth="120"/>
                    <TextField fx:id="txtPrice" promptText="Price" prefWidth="120"/>
                </HBox>

                <HBox spacing="10">
                    <Button text="Add" onAction="#add" styleClass="button primary"/>
                    <Button text="Update" onAction="#update" styleClass="button secondary"/>
                    <Button text="Delete" onAction="#delete" styleClass="button secondary"/>
                </HBox>
            </VBox>
        </VBox>
    </center>

</BorderPane>
