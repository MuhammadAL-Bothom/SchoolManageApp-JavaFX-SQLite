<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.wise.app.controller.RegisterController">
    <HBox prefWidth="1050" prefHeight="650">
        <VBox styleClass="sidebar" prefWidth="320" spacing="12">
            <Label text="Create Account" style="-fx-font-size:22; -fx-font-weight:700;"/>
            <Label text="Register then login" style="-fx-opacity:0.85;"/>
        </VBox>

        <VBox alignment="CENTER" spacing="14" HBox.hgrow="ALWAYS">
            <VBox styleClass="card" spacing="10" maxWidth="420">
                <Label text="Register" style="-fx-font-size:24; -fx-font-weight:800;"/>
                <TextField fx:id="txtUsername" promptText="Username"/>
                <PasswordField fx:id="txtPassword" promptText="Password"/>

                <HBox spacing="10">
                    <Button text="Create" onAction="#onRegister" styleClass="button primary"/>
                    <Button text="Back" onAction="#onBack" styleClass="button secondary"/>
                </HBox>
            </VBox>
        </VBox>
    </HBox>
</AnchorPane>
